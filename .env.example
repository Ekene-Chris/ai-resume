# Application information
APP_NAME="AI Resume Analyzer"
API_VERSION="v1"

# Azure Blob Storage settings
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_CONTAINER_NAME=cv-uploads
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string

# Azure OpenAI settings
AZURE_OPENAI_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# Azure Document Intelligence settings
DOCUMENT_INTELLIGENCE_ENDPOINT=your_document_intelligence_endpoint
DOCUMENT_INTELLIGENCE_KEY=your_document_intelligence_key
DOCUMENT_INTELLIGENCE_MODEL_ID=prebuilt-document

# Azure Cosmos DB settings
COSMOS_DB_ENDPOINT=your_cosmos_db_endpoint
COSMOS_DB_KEY=your_cosmos_db_key
COSMOS_DB_DATABASE=resume-analyzer
COSMOS_DB_ANALYSES_CONTAINER=analyses

# Application URLs
APP_FRONTEND_URL=http://localhost:3000

# Azure Communication Services (Email) settings
EMAIL_ENABLED=False
AZURE_COMMUNICATION_SERVICES_CONNECTION_STRING=your_communication_services_connection_string
EMAIL_SENDER_ADDRESS=DoNotReply@teleios-resume-analyzer.azurecomm.net

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]